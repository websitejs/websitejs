{
    "name": "WebsiteJS Demo Website",
    
    "paths": {
        "src": "./src",
        "dest": "./dist",

        "tasks": "./gulp-tasks",

        "scss": {
            "src": "/",
            "dest": "/css",
            "docs": "/docs/styles"
        },

        "scripts": {
            "fileName": "scripts",
            "src": "/js",
            "dest": "/js",
            "docs": "/docs/scripts"
        },

        "elements": {
            "src": "/elements"
        },

        "components": {
            "src": "/components"
        },

        "libraries": {
            "jquery": [
                "./node_modules/jquery/dist/jquery.min.js"
            ],
            "bootstrap": [
                "./node_modules/bootstrap-sass/assets/javascripts/bootstrap.min.js",
                "./node_modules/responsive-toolkit/dist/bootstrap-toolkit.min.js"
            ],
            "libs": [
                "./node_modules/js-cookie/src/js.cookie.js"
            ]
        },

        "assets": {
            "images": {
                "src": "/assets/images",
                "dest": "/assets/images"
            },
            "icons": {
                "svg": {
                    "src": "/assets/icons/svg",
                    "dest": "/assets/icons/svg"
                }
            }
        },

        "styleguide": {
            "src": "/styleguide",
            "dest": "/styleguide"
        },

        "galen": {
            "src": "/styleguide/pages",
            "report": "/tests/layout"
        }
    }
}